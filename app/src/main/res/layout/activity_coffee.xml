<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E7EEF6"
    tools:context=".coffee">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bigbrew_wallpaper"
        android:textColor="@color/white" />
        
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/milktea_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#E7EEF6"
                android:text="Milk Tea"
                android:textColor="@android:color/holo_orange_dark" />

            <Button
                android:id="@+id/coffee_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#E7EEF6"
                android:text="Coffee"
                android:textColor="@android:color/holo_orange_dark" />

            <Button
                android:id="@+id/praf"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#E7EEF6"
                android:text="Praf"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>

    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/kapebrusko" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="Kape Brusko"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="-140dp"
                app:srcCompat="@drawable/kape_machh" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Kape Machh"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginLeft="260dp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>